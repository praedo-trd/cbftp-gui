{% extends "layout.twig" %}

{% block content %}

    <div class="hbd">
      <h3>Tools > Section overview</h3>
    </div>

    <table class="table table-striped table-bordered">
        <tbody>
            {% for tagName,sites in tags %}
              <tr>
                <td width="10%"><code>{{ tagName }}</code></td>
                <td>
                  {% for s in sites %}
                    <span class="badge badge-default">{{ s }}</span>
                  {% endfor %}
                </td>
              </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
